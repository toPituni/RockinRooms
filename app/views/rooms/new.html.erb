<div class="container" style="width: 500px">
  <h1>Create a new room</h1>
  <br>
  <%= simple_form_for(@room) do |f| %>
    <%= f.input :name %>
    <br>
    <%= f.input :description %>
    <br>
    <%= f.input :address %>
    <br>
    <%= f.input :district %>
    <br>
    <%= f.input :equipment %>
    <br>
    <%= f.input :price %>
    <br>

     <div class="form-actions btn btn-flat">
      <%= f.button :submit, "Create" %>
      <br>
    </div>
  <% end %>
  <br>
</div>

